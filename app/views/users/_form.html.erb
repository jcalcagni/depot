<div class='depot_form'>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> 
	    prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
  <legend>Enter User Details</legend>
  
  <div class="field">
    <%= f.label :firstname, "First Name" %>
    <%= f.text_field :firstname, size: 40 %>
  </div>
  <div class="field">
    <%= f.label :lastname %>
    <%= f.text_field :lastname, size: 40 %>
  </div>
  <div class="field">
   <%= f.label :username %>
    <%= f.text_field :username, size: 40 %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, size: 40 %>
  </div>
  <div class="field">
    <%= f.label :licensest, "License St" %>
    <%= f.text_field :licensest, size: 2 %>
  </div>
  <div class="field">
   <%= f.label :licenseno, "License #" %>
    <%= f.text_field :licenseno, size: 40 %>
  </div class="field">
  <div class="field">
    <%= f.label :specialty, "Specialty" %>
    <%= f.text_field :specialty, size: 40 %>
  </div>
  <div class="field">
   <%= f.label :password, "Password"%>
    <%= f.password_field :password, size: 40 %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirm Password" %><br />
    <%= f.password_field :password_confirmation, size: 40 %>
  </div>
  
  <div>
    <%= f.submit %>
  </div>
  
  </fieldset>
<% end %>

</div>